<form action="/listings/sale/<%=@listing.id%>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>Beds</label>
    <input type="number" name="listing[bed]" class="form-control" min="1">
    <label>Baths</label>
    <input type="number" name="listing[bath]" class="form-control" min="1">
    <label>Area</label>
    <input type="number" name="listing[footage]" class="form-control" min="0">
    <label>Price</label>
    <input type="number" name="listing[price]" class="form-control" min="0">
    <input type="submit" value="Submit" class="btn btn-primary">
</form>