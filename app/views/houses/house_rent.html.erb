<div class="filterbar">
  <div class="updatebuy">
  <form action="/houses/routes" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="searchtype" value="buy">
    <input name="location" class="form-control" type="text" placeholder="Update Search">
    <input type="submit" class="btn btn-secondary">
  </form>
  </div>
  <div class="filterbuy">
    <form action="/houses/house_rent/<%=params[:location]%>/filters/" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="number" min="0" placeholder="Price Max" name="filters[price]" class="form-control">
      <input type="number" min="0" placeholder="Beds" name="filters[bed]" class="form-control">
      <input type="number" min="0" placeholder="Baths" name="filters[bath]" class="form-control">
      <input type="submit" class="btn btn-secondary">   
    </form>
  </div>
</div>
<div class="buyfaves">
  <% if @listings %>
    <h3>Listings</h3>
    
      <% @listings.each do |f| %>
        <div class="favebox">
        <% if f.rental_image %>
          <img src="<%= f.rental_image.gallery[0].url %>"/>
        <% end %>
        <%= f.address %> <%= f.street %><br>
        <%= f.city %> <%= f.state %><br>
        <%= number_to_currency(f.price, precision: 0) %>
        <a href="/listings/sale/<%=f.id%>">Listing Info</a>
         </div>
      <% end %>
  <%else%>
    <h3>Try searching a different area</h3>
  <%end%>  
</div>

<div id="map"></div>


